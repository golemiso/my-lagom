# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /players/:id                controllers.PlayerController.get(id: com.golemiso.mylagom.player.api.Player.Id)
GET     /players/:id/detail         controllers.PlayerController.get(id: com.golemiso.mylagom.player.api.Player.Id)
#GET     /players                    controllers.PlayerController.get(slug: com.golemiso.mylagom.player.api.PlayerSlug)
GET     /players                    controllers.PlayerController.getAll
POST    /players                    controllers.PlayerController.post()
PUT     /players/:id                controllers.PlayerController.put(id: com.golemiso.mylagom.player.api.Player.Id)
DELETE  /players/:id                controllers.PlayerController.delete(id: com.golemiso.mylagom.player.api.Player.Id)

GET     /competitions/:id           controllers.CompetitionController.get(id: com.golemiso.mylagom.competition.api.Competition.Id)
POST    /competitions               controllers.CompetitionController.post()

GET     /teams/:id                  controllers.TeamController.get(id: com.golemiso.mylagom.team.api.Team.Id)
GET     /teams/:id/detail           controllers.TeamController.get(id: com.golemiso.mylagom.team.api.Team.Id)
GET     /teams                      controllers.TeamController.getAll
POST    /teams                      controllers.TeamController.post()
PUT     /teams/:id                  controllers.TeamController.put(id: com.golemiso.mylagom.team.api.Team.Id)
DELETE  /teams/:id                  controllers.TeamController.delete(id: com.golemiso.mylagom.team.api.Team.Id)

GET     /battles/:id                controllers.BattleController.get(id: com.golemiso.mylagom.battle.api.Battle.Id)
GET     /battles                    controllers.BattleController.getAll
POST    /battles                    controllers.BattleController.post()
PUT     /battles/:id                controllers.BattleController.put(id: com.golemiso.mylagom.battle.api.Battle.Id)
DELETE  /battles/:id                controllers.BattleController.delete(id: com.golemiso.mylagom.battle.api.Battle.Id)

GET     /rankings                   controllers.RankingController.get(rankBy: String)
